<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.db.newproject.MainActivity">


<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Username"
    android:id="@+id/un"
    android:textAlignment="center"
    android:layout_above="@+id/ue"
    android:layout_centerInParent="true"/>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Email"
    android:textAlignment="center"
    android:id="@+id/ue"
    android:layout_above="@+id/up"
    android:layout_centerInParent="true"/>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Password"
    android:textAlignment="center"
    android:id="@+id/up"
    android:layout_above="@+id/btnReg"
    android:layout_centerInParent="true"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Register"
    android:id="@+id/btnReg"
    android:layout_centerInParent="true"
    android:onClick="registerUser"/>
<TextView
    android:id="@+id/txtview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25dp"
    android:layout_below="@+id/btnReg"
    android:textAlignment="center"
    android:text="If already have an account you can SignIn !!!"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sign In"
    android:layout_below="@+id/txtview"
    android:layout_centerInParent="true"
    android:onClick="signUp"/>
</RelativeLayout>
